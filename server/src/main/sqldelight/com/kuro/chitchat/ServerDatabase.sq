-- Tạo bảng Users với id là kiểu TEXT và là khóa chính
CREATE TABLE Users (
    id TEXT PRIMARY KEY,
    name TEXT NOT NULL,
    emailAddress TEXT UNIQUE NOT NULL,
    profilePhoto TEXT
);

getUserInfo:
SELECT * FROM Users WHERE id = ?;

insertUser:
INSERT INTO Users(id, name, emailAddress, profilePhoto) VALUES (?, ?, ?, ?);

deleteUser:
DELETE FROM Users WHERE id = ?;

updateUserName:
UPDATE Users SET name = ? WHERE id = ?;